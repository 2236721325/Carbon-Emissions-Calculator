.hdBox{
  height: 48px;
}
.page__hd{
  position:fixed;
  top:0;
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 48px;
  width: 100%;
  background:#FFFFFF;
  box-shadow: 0 2px 2px 0 rgba( 31, 38, 135, 0.37 );
  backdrop-filter: blur( 20px );
  -webkit-backdrop-filter: blur( 20px );
  border-radius: 10px;
  z-index:999;


}
.icon{
  height: 48px;
  width: 48px;
  border-radius: 48px;
}
.bodyBox{
  background:#FFFFFF;
  -webkit-box-shadow:0px 0px 10px 4px rgba(62,66,66,0.5);
  -moz-box-shadow: 0px 0px 10px 4px rgba(62,66,66,0.5);
  box-shadow: 0px 0px 10px 4px rgba(62,66,66,0.5);
  border-radius: 10px;
}
.table {
  margin: 10px;
 }
 .tr {
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: center;

 }
 .td {
  width:40%;
  justify-content: center;
  text-align: center;
 }
 .th {
  width: 40%;
  justify-content: center;
  display: flex;
  align-items: center;
 }
 .buttons{
   display: flex;
   justify-content:space-between;
   margin: 10px;
 }


 .ftBox{
   height: 36px;
 }
.page__ft{
  position:fixed;
  bottom: 0;
  display: flex;
  width: 100%;
  height: 36px;
  background-color: springgreen;
  border-radius: 5px;
  align-items: center;
  justify-content: center;

}